//==============================================================================
//
//  csignal
//
#ifndef CSIGNAL_INCLUDED
#define CSIGNAL_INCLUDED

#define SIGABRT 6
#define SIGINT 2
#define SIGILL 4
#define SIGBUS 7     // Linux only
#define SIGFPE 8
#define SIGSEGV 11
#define SIGTERM 15
#define SIGBREAK 21  // Windows only

typedef void (*sighandler)(int sig);
void* signal(int sig, sighandler handler);
int raise(int sig);

#endif
